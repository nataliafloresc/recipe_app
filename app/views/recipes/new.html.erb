
<div class = 'new-recipe'> <h3> New Recipe </h3> </div>

<div class = 'new_recipe_form'>

<br>
<br>

<div class = 'conteiner'>
	<div class= 'col-md-3'>
		<%= simple_form_for @recipe, html: { class: 'form-horizontal'} do |form| %>
	</div>
</div>

	<div class = 'conteiner'>
		<div class= 'col-md-3'>		
			<%= form.input :name, label: 'Recipe name' %> <br><br>
			<%= form.input :difficulty_level, label: 'Difficulty level' %> <br>
			<%= form.input :preparation_time, label: 'Preparation time (min)' %> <br> <br> <br>
</div>
</div>

<div class = 'conteiner'>
	<div class= 'col-md-3'>
		<%= form.input :ingredients, label: 'List all ingredients' %> <br> <br>
		<%= form.input :directions, label: 'Directions' %> <br>
		<%= form.association :category, :include_blank => false %> <br>
			
	</div>
</div>			
			
		

<div class = 'conteiner'>
	<div class= 'col-md-3'>	
			<%= form.input :photo, label: 'Photo File' %> 
			<div class = 'share_recipe'> <%= form.submit 'SHARE RECIPE', class: 'btn btn-primary' %> <br><br><br> </div>
		<% end %>
	</div>
</div>
</div>
